<div class="grid grid-cols-4 gap-2">
  {% for category in categories %}
  <div class="m-5 p-5 bg-white rounded border border-gray-200 shadow-sm -translate-y-20">
    <h1 class="text-lg font-semibold mb-2">{{ category.name }}</h1>

    <div class="grid grid-cols-2 gap-4">
      {% for subCategory in category.subCategories %}
        <div class="flex flex-col">
          <div class="w-full aspect-square bg-gray-300 rounded-lg overflow-hidden flex items-center justify-cente">
            {% if subCategory.image %}
              <img src="{{asset('uploads/subcategories/' ~ subCategory.image )}}" 
                alt="{{subCategory.name}}"
                class="w-full h-full object-cover"
              >
            {% endif %}
          </div>
          <p class="mt-2 text-sm">{{ subCategory.name }}</p>
        </div>
      {% endfor %}
      
    </div>
  </div>
  {% endfor %}
  

</div>