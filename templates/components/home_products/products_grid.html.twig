<div class="grid grid-cols-4 gap-2">
  {% for category in categories %}
    <twig:Card class="m-5 p-5 bg-card rounded border border-border shadow-sm -translate-y-20">
      <twig:Card:Header>
        <twig:Card:Title>{{ category.name }}</twig:Card:Title>
      </twig:Card:Header>

      <twig:Card:Content class="grid grid-cols-2 gap-4">
        {% for subCategory in category.subCategories %}
          <div class="flex flex-col group cursor-pointer">
            <div class="w-full aspect-square bg-muted rounded-lg overflow-hidden flex items-center justify-center">
              {% if subCategory.image %}
                <img 
                  src="{{ asset('uploads/subcategories/' ~ subCategory.image ) }}" 
                  alt="{{ subCategory.name }}"
                  class="w-full h-full object-cover group-hover:scale-105 transition"
                >
              {% endif %}
            </div>
            <p class="mt-2 text-sm text-muted-foreground group-hover:text-primary transition">
              {{ subCategory.name }}
            </p>
          </div>
        {% endfor %}
      </twig:Card:Content>
  </twig:Card>

  {% endfor %}
</div>
